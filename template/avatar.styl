.avatar
  height 40px
  width 40px
  background-size 40px 40px
  display block
  &.circle
    -moz-border-radius 40px
    -webkit-border-radius 40px
    border-radius 40px
  &.rounded
    -moz-border-radius 5px
    -webkit-border-radius 5px
    border-radius 5px      
  &.large
    height 80px
    width 80px
    background-size 80px 80px
    &.circle
      -moz-border-radius 80px
      -webkit-border-radius 80px
      border-radius 80px
