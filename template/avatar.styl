@import "nib"

.avatar
  height 40px
  width 40px

  img, span
    height 100%
    width 100%

  span
    display block
    background-size 100% 100%
    background-color #aaa
    color #fff
    font-size 20px
    line-height 40px
    font-family "Helvetica Neue", Helvetica, "Hiragino Sans GB", Arial, sans-serif
    text-align center

.avatar-large
  height 80px
  width 80px
  span
    font-size 40px
    line-height 80px

.avatar-small
  height 30px
  width 30px
  span
    font-size 14px
    line-height 30px

.avatar-rounded
  img, span
    border-radius 5px

.avatar-circle
  img, span
    border-radius 50%

.avatar-hidden
  img
    display none

.avatar-hide-initials
  span
    display none
